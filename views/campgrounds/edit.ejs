<% layout('/layouts/boilerplate') %>
  <div class="row">
    <h2 class="text-center">Edit Campground</h2>
    <div class="col-md-6 offset-md-3">
      <form action="/campgrounds/<%=Campground._id%>?_method=PUT" method="POST" class="needs-validation"
        enctype="multipart/form-data" novalidate>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" value="<%=Campground.title%>" name="campground[title]" id="title"
            required />
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input type="text" class="form-control" value="<%=Campground.location%>" name="campground[location]"
            id="location" required />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" id="description" name="campground[description]" required>
<%= Campground.description %></textarea>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <!-- <input type="text" class="form-control" value="<%=Campground.image%>" id="image" name="campground[image]"
                required> -->
          <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Upload Images</label>
            <input class="form-control" type="file" id="formFileMultiple" name="image" multiple />
          </div>
        </div>
        <div>
          <label for="price" class="form-label">Price</label>

          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input type="text" name="campground[price]" class="form-control" id="price" placeholder="0.00"
              value="<%=Campground.price%>" aria-label="Amount (to the nearest dollar)" required />
          </div>
        </div>
        <button class="btn btn-info mb-3" type="submit">Edit Campground</button>
        <div class="mb-3">
          <% Campground.images.forEach(function(element, i) { %>
            <div class="d-inline-block me-2 mb-2">
              <img src="<%= element.thumbnail %>" class="img-thumbnail" alt="" />
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="deleteImages[]" value="<%= element.filename %>"
                  id="image-<%= i %>" />
                <label class="form-check-label" for="image-<%= i %>">
                  Delete
                </label>
              </div>
            </div>
            <% }); %>
        </div>
      </form>
      <a class="btn btn-danger mt-3" href="/campgrounds">Back to Campgrounds</a>
    </div>
  </div>